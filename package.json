
{
    "name": "smallworld-magik",
    "displayName": "Smallworld Magik",
    "description": "Smallworld Magik for Visual Studio Code",
    "version": "1.1.1",
    "publisher": "siamz",
    "icon": "images/swmagik.png",
	"keywords": [
		"smallworld",
		"magik",
		"gis_aliases"
	],
    "engines": {
        "vscode": "^1.20.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets",
        "Themes"
    ],
    "activationEvents": [
        "onCommand:magik.set",
        "onLanguage:swgis",
        "onLanguage:magik",
        "workspaceContains:*.magik,*.def,gis_aliases"
    ],
    "main": "./src/extension",
    "contributes": {
        "configuration":{
            "title": "Smallworld GIS path",
            "properties": {
                "Smallworld.gisPath":{
                "type": ["string", "null"],
                "default": "C:/Smallworld/430/product/bin/x86/gis.exe",
                "description": "Specifies the path of gis.exe that the project uses. **USE double backslash '\\' or single forward slash '/'** \n \"Smallworld.gisPath\": \"gis path\" "
                }
            }
        },
        "commands": [
            {
            "command": "swSessions.runaliases",
            "title": "SW Run GIS Alias"
            }
        ],
        "menus": {
            "editor/context": [
                {
                "command": "swSessions.runaliases",
                "group": "swGroup@1"
                }
            ]
        },
        "themes": [
            {
                "label": "Smallworld Magik Light",
				"uiTheme": "vs",
				"path": "./cfg/magik-light.color-theme.json"
            }
        ],
        "languages": [
            {
                "id": "magik",
                "aliases": [
                    "magik",
                    "Smallworld Magik"
                ],
                "extensions": [
                    ".magik",
                    ".msg"
                ],
                "filenames": [
                    "config.xml",
                    "gui.xml"
                ],
                "configuration": "./cfg/magik-configuration.json"
            },
            {
                "id": "swgis",
                "aliases": [
                    "swgis",
                    "Smallworld GIS"
                ],
                "extensions": [],
                "filenames": [
                    "gis_aliases",
                    "product.def",
                    "module.def",
                    "load_list.txt",
                    "patch_list.txt"
                ],
                "configuration": "./cfg/swgis-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "magik",
                "scopeName": "source.magik",
                "path": "./cfg/magik.tmLanguage.json"
            },
            {
                "language": "swgis",
                "scopeName": "source.swgis",
                "path": "./cfg/swgis.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "magik",
                "path": "./cfg/magik.snippets.json"
            }
        ]     
    },
    "bugs": {
		"url": "https://github.com/siamz/smallworld-magik-vscode.git/issues",
		"email": "siamz@live.com"
	},
	"homepage": "https://github.com/siamz/smallworld-magik-vscode/tree/master/README.md",
	"repository": {
		"type": "git",
		"url": "https://github.com/siamz/smallworld-magik-vscode/tree/master"
	},
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "vscode": "^1.31.1"
	},
	"__metadata": {
		"publisherDisplayName": "Siamak Zolghadri"
    }
}
