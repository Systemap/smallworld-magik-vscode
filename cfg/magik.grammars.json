{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "magik",
	"patterns": [
		{ "include": "#pragma" },
		{ "include": "#slot" },
		{ "include": "#package" },
		{ "include": "#regexp" },
		{ "include": "#keywords" },
		{ "include": "#variable"  },
		{ "include": "#comments" },
		{ "include": "#conditions"  },
		{ "include": "#functions"  },
		{ "include": "#strings"  }
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control",
				"match": "\\b(_abstract|_allresults|_and|_andif|_block|_catch|_clone|_constant|_continue|_div|_dynamic|_elif|_else|_endblock|_endcatch|_endif|_endlock|_endloop|_endmethod|_endproc|_endprotect|_endtry|_false|_finally|_for|_gather|_global|_handling|_if|_import|_is|_isnt|_iter|_leave|_local|_lock|_loop|_loopbody|_maybe|_method|_mod|_no_way|_not|_optional|_or|_orif|_over|_package|_pragma|_private|_proc|_protect|_locking|_protection|_recursive|_return|_scatter|_self|_super|_then|_thisthread|_throw|_true|_try|_unset|_when|_while|_with|_xor)\\b"
			}]
		},
		"pragma": {
			"name": "constant.regexp",
			"begin": "_pragma",
			"end": "\\n",
			"patterns":[]
		},
		"package": {
			"name": "constant.language",
			"match": "\\w+:"
		},
		"slot": {
			"name": "constant.language",
			"notIn": ["string", "comment"],
			"match": "\\s\\.[a-zA-Z!?_]+[\\w!?_]*"
		},
		"variable": {
			"name": "variable.language",
			"notIn": ["string", "comment"],
			"match": "![\\w!?]*!"
		},
		"comments": {
			"name": "comment.control",
			"begin": "#",
			"end": "\\n",
			"patterns":[]
		},
		"conditions": {
			"patterns": [{
				"name": "string.regexp",
				"match": "\\s\\b(error|information|warning|system|debug|IN)\\b\\s"
			}]
		},
		"functions": {
			"patterns": [{
				"name": "markup.inserted",
				"match": "\\b(show|write|debug_print|print|\\s*\\.\\.+\\s*)\\b"
			}]
		},
		"regexp": {
			"patterns": [{
				"name": "string.regexp",
				"notIn": ["string", "comment"],
				"match": "\/.+\/[gimsuy]*"
			}]
		},
		"strings": {
			"patterns": [{	
				"name": "string",
				"begin": "\"",
				"end": "[\"\\n]",
				"notIn": ["comment"],
				"patterns": [{"match": "\\."}]
			},
			{	"name": "string",
				"begin": "'",
				"end": "['\\n]",
				"notIn": ["comment"],
				"patterns": [{"match": "."}]
			},
			{	"name": "string",
				"begin": "%",
				"end": "tab|space|newline|.",
				"notIn": ["comment"],
				"patterns": [{"match": ""}]
			},
			{	"name": "string",
				"begin": ":\\|",
				"end": "[\\|\\n]",
				"notIn": ["comment"],
				"patterns": [{"match": "[^\\n]"}]
			},
			{	"name": "string",
				"begin": ":[a-zA-Z!?_][\\w!?]*\\|",
				"end": "[\\|\\n]",
				"patterns": [{"match": "[^\\n]"}]
			},
			{	"name": "string",
				"begin": ":[a-zA-Z!?_]",
				"end": "([\\w!?_]*|\\n)",
				"patterns": [{"match": "[\\w!?_]"}]
					}
			]
		}
	},
	"scopeName": "source.magik"
}