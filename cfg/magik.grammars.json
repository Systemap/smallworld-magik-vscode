{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "magik",
	"patterns": [
		{ "include": "#pragma" },
		{ "include": "#self" },
		{ "include": "#slot" },
		{ "include": "#keywords" },
		{ "include": "#comments" },
		{ "include": "#conditions"  },
		{ "include": "#strings"  }
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control",
				"match": "\\b(_abstract|_allresults|_and|_andif|_block|_catch|_clone|_constant|_continue|_div|_dynamic|_elif|_else|_endblock|_endcatch|_endif|_endlock|_endloop|_endmethod|_endproc|_endprotect|_endtry|_false|_finally|_for|_gather|_global|_handling|_if|_import|_is|_isnt|_iter|_leave|_local|_lock|_loop|_loopbody|_maybe|_method|_mod|_no_way|_not|_optional|_or|_orif|_over|_package|_pragma|_private|_proc|_protect|_locking|_protection|_recursive|_return|_scatter|_self|_super|_then|_thisthread|_throw|_true|_try|_unset|_when|_with|_xor)\\b"
			}]
		},
		"pragma": {
			"name": "constant.regexp",
			"begin": "_pragma",
			"end": "\n",
			"patterns":[]
		},
		"self": {
			"name": "constant.language",
			"begin": "_self",
			"end": ".",
			"patterns":[]
		},
		"slot": {
			"name": "constant.language",
			"begin": "\\s\\.",
			"end": "[a-z!?_A-Z0-9]+||\\w",
			"notIn": ["string", "comment"],
			"patterns":[]
		},
		"comments": {
			"name": "comment.control",
			"begin": "#",
			"end": "\n",
			"patterns":[]
		},
		"conditions": {
			"patterns": [{
				"name": "string.regexp",
				"match": "\\s\\b(error|information|warning|system)\\b\\s"
			}]
		},
		"strings": {
			"patterns": [{	
				"name": "string",
				"begin": "\"",
				"end": "[\"\n]",
				"patterns": [{"match": "\\."}]
			},
			{	"name": "string",
				"begin": "'",
				"end": "['\n]",
				"patterns": [{"match": "."}]
			},
			{	"name": "string",
				"begin": "%",
				"end": "tab|space|newline|.",
				"patterns": [{"match": ""}]
			},
			{	"name": "string",
				"begin": ":\\|",
				"end": "\\||\n",
				"patterns": [{"match": "[a-z!?_]"}]
			},
			{	"name": "string",
				"begin": ":[a-z!?_A-Z0-9]+\\|",
				"end": "\\||\n",
				"patterns": [{"match": "."}]
			},
			{	"name": "string",
				"begin": ":\\w",
				"end": "[a-z!?_A-Z0-9]+||\\w",
				"patterns": [{"match": "[a-z!?_A-Z0-9]"}]
					}
			]
		}
	},
	"scopeName": "source.magik"
}