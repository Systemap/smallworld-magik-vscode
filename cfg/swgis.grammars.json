{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "swgis",
	"patterns": [
		{ "include": "#keywords" },
		{ "include": "#comments" },
		{ "include": "#variables" },
		{ "include": "#products" },
		{ "include": "#stanzas" },
		{ "include": "#strings"  }
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.swgis",
				"match": "\\b(title|description|optional|templates|end|requires|install_requires|requires_datamodel|hidden|version|condition_message_accessor|language|hiddencase_installation|style_installation|ace_installation|system_installation|auth_installation)\\b"
			},{
				"begin": "",
				"end": "=",
				"name": "keyword.control.swgis",
				"match": "\\b(title|directory|program|product|splash_screen|session|java|java_log|script|osgi_directory|args|log_file|icon_file|timeout|wait_line|interactive)\\b"
			}]
		},
		"stanzas": {
			"name": "constant.regexp",
			"begin": "^\\S:\\s?",
			"end": "\\n",
			"patterns": [{"match": "^\\([^#]\\S-+\\):\\s-*$"}]
		},
		"comments": {
			"name": "comment",
			"begin": "#",
			"end": "\n",
			"patterns": [{"match": "."}]
		},
		"variables": {
			"patterns": [{
				"name": "variable",
				"match": "^\\s+\\([\\w_]+\\)\\s*="
			},{
				"name": "variable.type",
				"match": "^\\s+\\([\\w_]+\\)\\s*:="
			},{
				"name": "variable.builtin",
				"match": "^\\s*(SW|sw)_[\\w_]+\\s*="
			},{
			},{
				"name": "variable.builtin",
				"match": "\\b(SW_ACE_DB_DIR|SW_LANGUAGE|SW_FONT_PATH|SW_FONT_CONFIG|SW_LAUNCH_JAVA_MEMORY|SW_ACP_PATH)\\b"
			},{
				"name": "variable.constant",
				"match": "\\s$\\sw+\\s$"
			}]
		},
		"products": {
			"patterns": [{
				"name": "constant.character",
				"match": "\\b(layered_product|config_product|customisation_product)\\b"
			},{
				"name": "constant.character",
				"match": "\\b(da_dk|de_ch|de_de|en_au|en_gb|en_us|es_es|et_ee|fi_fi|fr_be|fr_ca|fr_ch|fr_fr|it_it|jp_jp|ko_kr|nl_be|nl_nl|no_no|pt_br|pt_pt|sv_fi|sv_se|zh_tw)\\b"
			}]
		},
		"strings": {
			"patterns": [
				{	"name": "string",
					"begin": "#",
					"end": "\\d",
					"patterns": [{"match": ""}]
				},
				{	"name": "string",
					"begin": ":\\|",
					"end": "(\\||\\n)",
					"patterns": [{".*"}]
				},
				{	"name": "string",
					"begin": ":[a-zA-Z!?_]+",
					"end": "([\\w!?_]*|\\n)",
					"patterns": [{"match": "[\\w!?_]*"}]
				},
				{	"name": "string",
					"begin": ":[a-zA-Z!?_]+[\\w!?_]*\\|,
					"end": "(\\||\\n)",
					"patterns": [{"match": ".*]"}]
				}
			]
		}
	},
	"scopeName": "source.swgis"
}