{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "swgis",
	"patterns": [
		{ "include": "#keywords" },
		{ "include": "#variables" },
		{ "include": "#comments" },
		{ "include": "#products" },
		{ "include": "#strings"  }
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control",
				"match": "\\b(title|description|optional|templates|end|requires|install_requires|requires_datamodel|hidden|version|condition_message_accessor|language|hiddencase_installation|style_installation|ace_installation|system_installation|auth_installation)\\b"
			},{
				"name": "keyword.control",
				"match": "\\b(title|directory|program|product|splash_screen|session|java|java_log|script|osgi_directory|args|log_file|timeout|wait_line|interactive)\\b+="
			}]
		},
		"variables": {
			"patterns": [{
				"name": "variable",
				"begin": "%",
				"end": "[%\n]",
				"match": "."
		}]
		},
		"comments": {
			"patterns": [{
			"name": "comment",
			"begin": "#",
			"end": "\n",
			"patterns": [{"match": "."}]
			},{
				"name": "comment",
				"begin": "REM\\s",
				"end": "\\n",
				"patterns": [{"match": "."}]
			},{
				"name": "comment",
				"begin": ":: ",
				"end": "\\n",
				"patterns": [{"match": "."}]
			}]
		},
		"products": {
			"patterns": [{
				"name": "string",
				"match": "\\b(layered_product|config_product|customisation_product)\\b"
			}]
		},
		"strings": {
			"patterns": [{
				"name": "string",
				"match": "\\b(da_dk|de_ch|de_de|en_au|en_gb|en_us|es_es|et_ee|fi_fi|fr_be|fr_ca|fr_ch|fr_fr|it_it|jp_jp|ko_kr|nl_be|nl_nl|no_no|pt_br|pt_pt|sv_fi|sv_se|zh_tw)\\b"
			}]
		}
	},
	"scopeName": "source.swgis"
}